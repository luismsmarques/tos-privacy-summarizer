{
  "manifest_version": 3,
  "name": "ToS & Privacy Summarizer",
  "version": "1.2.0",
  "description": "Resuma Termos de Serviço e Políticas de Privacidade usando IA. Entenda rapidamente o que está a aceitar antes de clicar em 'Aceito'.",
  "author": "Luis Marques",
  "homepage_url": "https://github.com/luismsmarques/tos-privacy-summarizer",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "https://tos-privacy-summarizer.vercel.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "ToS & Privacy Summarizer",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "privacy-policy.html", 
        "terms-of-service.html", 
        "onboarding.html", 
        "summary-page.html", 
        "summary-page.js", 
        "checkout.html", 
        "checkout.js", 
        "history.html", 
        "history.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
